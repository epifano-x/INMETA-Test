# ==========================================================
# üîß Application
# ==========================================================
APP_NAME=inmeta-docs-api
LOG_LEVEL=debug                 # trace | debug | info | warn | error
SWAGGER_ENABLED=true            # habilita/desabilita a documenta√ß√£o Swagger

# ==========================================================
# üîç Elasticsearch
# ==========================================================
ELASTICSEARCH_NODE=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=admin
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_TLS_REJECT_UNAUTHORIZED=false
ELASTICSEARCH_LOGS_INDEX=inmeta

# ==========================================================
# üîë Keycloak Authentication
# ==========================================================
KEYCLOAK_AUTH_SERVER_URL=https://keycloak.example.com/realms/INMETA
KEYCLOAK_REALM=INMETA
KEYCLOAK_CLIENT_ID=inmeta-api
KEYCLOAK_AUDIENCE=account
KEYCLOAK_SECRET=changeme

# ==========================================================
# üóÑÔ∏è Database (PostgreSQL)
# ==========================================================
DATABASE_URL="postgresql://user:password@localhost:5432/inmeta_db?schema=public"
# exemplo para rodar em container:
# DATABASE_URL="postgresql://user:password@postgres:5432/inmeta_db?schema=public"

# ==========================================================
# üì¶ Storage
# ==========================================================
STORAGE_DRIVER=disk             # disk | s3
STORAGE_DISK_ROOT=/data/docs    # caminho dentro do container
UPLOAD_MAX_MB=30                # limite por arquivo (MB)
ALLOWED_MIME=application/pdf,image/png,image/jpeg
